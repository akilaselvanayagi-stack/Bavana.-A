    <script>
        // Theme switcher functionality
        const themeToggle = document.getElementById('themeToggle');
        themeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-theme');
            if (document.body.classList.contains('dark-theme')) {
                themeToggle.textContent = 'Light Mode';
            } else {
                themeToggle.textContent = 'Dark Mode';
            }
        });
        
        // String manipulation functions
        function toUpperCase() {
            const input = document.getElementById('textInput').value;
            document.getElementById('stringOutput').textContent = input.toUpperCase();
        }
        
        function toLowerCase() {
            const input = document.getElementById('textInput').value;
            document.getElementById('stringOutput').textContent = input.toLowerCase();
        }
        
        function reverseText() {
            const input = document.getElementById('textInput').value;
            document.getElementById('stringOutput').textContent = input.split('').reverse().join('');
        }
        
        // Calculator functions
        function add() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            document.getElementById('calcOutput').textContent = `Result: ${num1 + num2}`;
        }
        
        function subtract() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            document.getElementById('calcOutput').textContent = `Result: ${num1 - num2}`;
        }
        
        function multiply() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            document.getElementById('calcOutput').textContent = `Result: ${num1 * num2}`;
        }
        
        function divide() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            if (num2 === 0) {
                document.getElementById('calcOutput').textContent = 'Error: Division by zero';
            } else {
                document.getElementById('calcOutput').textContent = `Result: ${num1 / num2}`;
            }
        }
        
        // DOM manipulation functions
        function changeColor() {
            const colors = ['#ff6b6b', '#48dbfb', '#1dd1a1', '#feca57', '#ff9ff3'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            document.getElementById('domOutput').style.color = randomColor;
        }
        
        function changeText() {
            const texts = [
                'Text changed with JavaScript!',
                'DOM manipulation is powerful!',
                'You can change content dynamically!',
                'JavaScript makes web pages interactive!'
            ];
            const randomText = texts[Math.floor(Math.random() * texts.length)];
            document.getElementById('domOutput').textContent = randomText;
        }
        
        function toggleVisibility() {
            const output = document.getElementById('domOutput');
            if (output.style.display === 'none') {
                output.style.display = 'block';
            } else {
                output.style.display = 'none';
            }
        }
        
        // Array operations
        const numbers = [7, 3, 9, 2, 5, 1, 8, 4, 6];
        
        function showArray() {
            document.getElementById('arrayOutput').textContent = `Array: [${numbers.join(', ')}]`;
        }
        
        function sortArray() {
            const sorted = [...numbers].sort((a, b) => a - b);
            document.getElementById('arrayOutput').textContent = `Sorted: [${sorted.join(', ')}]`;
        }
        
        function filterArray() {
            const evens = numbers.filter(num => num % 2 === 0);
            document.getElementById('arrayOutput').textContent = `Even Numbers: [${evens.join(', ')}]`;
        }
        
        function mapArray() {
            const doubled = numbers.map(num => num * 2);
            document.getElementById('arrayOutput').textContent = `Doubled: [${doubled.join(', ')}]`;
        }
        
        // Factorial calculation
        function factorial(n) {
            if (n === 0 || n === 1) {
                return 1;
            }
            return n * factorial(n - 1);
        }
        
        function calculateFactorial() {
            const input = parseInt(document.getElementById('factorialInput').value);
            if (input < 0 || input > 20) {
                document.getElementById('factorialOutput').textContent = 'Please enter a number between 0 and 20';
            } else {
                const result = factorial(input);
                document.getElementById('factorialOutput').textContent = `Factorial of ${input} is ${result}`;
            }
        }
        
        // Initialize some outputs on page load
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('stringOutput').textContent = "Output will appear here";
            document.getElementById('calcOutput').textContent = "Result will appear here";
            document.getElementById('arrayOutput').textContent = "Array operations result will appear here";
            document.getElementById('factorialOutput').textContent = "Result will appear here";
        });
    </script>
</body>
</html>
